<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" enctype="multipart/form-data" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Titulo de imagen" name="title">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control"
                            placeholder="Descripcion de la imagen"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Escoge un archivo</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">Subir imagen</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Descripcion</th>
                    <th>Operacion</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td><a href="{{imageURL}}" target="_blank" class="btn btn-primary">View</a></td>
                    <td><a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>